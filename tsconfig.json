{
    "compilerOptions": {
      "target": "ES3",
      "allowUnreachableCode": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "module": "commonjs",
      "outDir": "./build",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "sourceMap": true,
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}